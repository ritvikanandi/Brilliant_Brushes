        <button id="order-btn" class="btn">Proceed to payment</button>
            <script src="https://js.stripe.com/v3/">
            </script>
            <script>
                var stripe = Stripe('pk_test_51JVA4YSEKduK30PRYQM0CWZOpK5YV7rP7F7dxPS1IpskfSJwqFe4c5PBLI6Hqd1nZWjlbRev30Bd0BNoif2qA7pv00GnqZ27QE');
